<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag "style.css" %>
</head>

<body>
<div class="hidden">
    <%= @user = User.find(params[:id]) %>
</div>
<div class="body">
    <p> Editing account information for: <%= @user.email %> </p>

    <%= form_for @user, url: user_path(@user), method: :patch do |f| %>
    <table>
        <tr>
            <td><%= f.label :name %></td>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <td><%= f.label :campus_id %></td>
            <td><%= f.text_field :campus_id %></td>
        </tr>
        <tr>
            <td><%= f.label :district_id %></td>
            <td><%= f.text_field :district_id %></td>
        </tr>
        <tr>
            <td><%= f.label :is_admin %></td>
            <td><%= f.check_box :is_admin %></td>
        </tr>
    </table>

    <%= f.submit "Save" %>
    <% end %>

    <%= form_with(url: user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }) do |form| %>
    <%= form.submit 'Delete' %>
    <% end %>

</div>
</body>

</html>