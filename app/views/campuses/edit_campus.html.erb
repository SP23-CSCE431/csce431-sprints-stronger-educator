<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag "style.css" %>
</head>

<body>
<div class="hidden">
    <%= @campus = Campus.find(params[:id]) %>
</div>

<div class="body">
    <p> Editing account information for campus: <%= @campus.id %> </p>

    <%= form_for @campus, url: campus_path(@campus), method: :patch do |f| %>
    <table>
        <tr>
            <td><%= f.label :name %></td>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <td><%= f.label :id, "Campus ID" %></td>
            <td><%= f.text_field :id %></td>
        <tr>
            <td><%= f.label :district_id, "District ID" %></td>
            <td><%= f.text_field :district_id %></td>
        </tr>
    </table>

    <%= f.submit "Save Changes" %> 
    <% end %>

    <%#= link_to "Back", "/users/index", class: "button button-secondary" %>

    <%= form_with(url: campus_path(@campus), method: :delete, data: { confirm: 'Are you sure you want to delete this district?' }) do |form| %>
    <%= form.submit '                      Delete Campus                       ' %>
    <% end %>

</div>
</body>

</html>