<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag "style.css" %>
</head>

<body>
<div class="hidden">
    <%= @district = District.find(params[:id]) %>
</div>

<div class="body">
    <p> Editing account information for district: <%= @district.id %> </p>

    <%= form_for @district, url: district_path(@district), method: :patch do |f| %>
    <table>
        <tr>
            <td><%= f.label :name %></td>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <td><%= f.label :id, "District ID" %></td>
            <td><%= f.text_field :id %></td>
        </tr>
    </table>

    <%= f.submit "Save Changes" %> 
    <% end %>

    <%#= link_to "Back", "/users/index", class: "button button-secondary" %>

    <%= form_with(url: district_path(@district), method: :delete, data: { confirm: 'Are you sure you want to delete this district?' }) do |form| %>
    <%= form.submit '                      Delete District                       ' %>
    <% end %>

</div>
</body>

</html>