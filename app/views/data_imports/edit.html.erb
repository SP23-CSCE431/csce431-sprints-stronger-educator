<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag "style.css" %>
</head>

<body>
<div class="hidden">
    <%= @dataimport = DataImport.find(params[:id]) %>
</div>

<div class="body">
    <p> Editing information for data_import: <%= @data_import.id %> </p>

    <%= form_for @data_import, url: data_import_path(@data_import), method: :patch do |f| %>
    <table>
        <tr>
            <td><%= f.label :name %></td>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <td><%= f.label :district_id, "District ID" %></td>
            <td><%= f.text_field :district_id %></td>
        </tr>
    </table>

    <%= f.submit "Save Changes" %> 
    <% end %>

    <%#= link_to "Back", "/users/index", class: "button button-secondary" %>

    <%= form_with(url: data_import_path(@data_import), method: :delete, data: { confirm: 'Are you sure you want to delete this data?' }) do |form| %>
    <%= form.submit '                      Delete Data                  ' %>
    <% end %>

</div>
</body>

</html>